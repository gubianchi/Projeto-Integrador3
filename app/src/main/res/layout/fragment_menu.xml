<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F598F">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_dialog"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="350dp" />

    <LinearLayout
        android:id="@+id/quadrado_branco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnIrParaBaterPonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text="Bater Ponto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnIrParaRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text="Registrar Ponto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnIrParaRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text="Seus Registros"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnIrParaMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text="Mapa"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>